<!--index.wxml-->
<view class='container'>
  <view wx:for='{{goods}}' wx:key="id">
    <view class='good-item' data-id='{{item.id}}'>
      <view class="logo_view">
        <image mode="widthFix" src="{{item.logo ? item.logo : '../imgs/nodata.png'}}" />
      </view>
      <view>
        <text>{{item.name ? item.name : '暂无信息'}}</text>
        <view class="detail">
        价格：
          <text wx:if='{{item.price}}' class='price-text'>{{item.price}}</text>
        </view>
        <text class="detail" wx:if='{{item.description}}'>{{item.description}}</text>
      </view>
    </view>
  </view>
</view>
