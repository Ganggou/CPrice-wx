page {
  background: #fff;
}

.content {
  min-height: calc(90vh - 98px);
}

.header {
  padding: 5vw 7vw 5vw 7vw;
  font-size: 11px;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.logo_view {
  display: flex;
  height: 20vw;
  width: 20vw;
  justify-content: center;
  align-items: center;
}

.logo_view image {
  width: 20vw;
  height: 20vw;
}

.detail {
  width: 66vw;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.detail text {
  margin: 3px 0;
}

.title {
  font-size: 18px;
  font-weight: 800;
  padding-bottom: 10px;
}

.price-container {
  width: 27vw;
  margin-top: 20px;
  margin-bottom: 5px;
  font-size: 12px;
  font-weight: 600;
  padding-right: 10px;
}

.price-text {
  color: #76d63f;
  font-size: 22px;
  font-weight: 800;
}

.arrow {
  width: 35px;
  height: 35px;
}

.footer {
  width: 100%;
  bottom: 10px;
  font-size: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 10px;
}

.canvas-container {
  display: flex;
  align-items: center;
  min-width: 100vw;
}

.canvas {
  padding-bottom: 20px;
  width: 100%;
  height: 200px;
}